    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "C:\\Mingw-w64\\mingw32\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}